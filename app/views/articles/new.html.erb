<%= form_for(:article, :html => {class: "form-horizontal", role: "form"},url: articles_url) do |f| %>
    <div class="form-group">
       <div class="control-label col-sm-2">
       <%= f.label :Name %>
       </div><br>
       <div class="col-sm-8">
         <%= f.text_field :name , class: "form-control", placeholder: "Enter Name", autofocus: true%>
       </div>

       <%= f.label :Description %>
       </div><br>
       <div class="col-sm-8">
         <%= f.text_area :description, class: "form-control", placeholder: "Enter Description", autofocus: true%>
       </div>
   </div>

   <div class="form-group">
     <div class="col-sm-offset-2 col-sm-10">
       <%= f.submit 'Create Article', class:'btn btn-primary btn-lg'  %>
     </div>
   </div>
 <% end %>

